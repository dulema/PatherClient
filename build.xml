<?xml version="1.0" ?>

<project name="PatherClient" default="build" basedir=".">
	
	<target name="clean">
		<delete dir="build/" />
	</target>

	<target name="build">
		<mkdir dir="build"/>
		<javac debug="true" debuglevel="lines,source" srcdir="src" destdir="build" />
	</target>

	<target name="run" depends="build">
		<java classname="main.Client" classpath="build/" fork="true" />
	</target>

</project>
